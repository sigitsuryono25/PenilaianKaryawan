<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.lapkeu.LapKeuActivity">

    <ImageView
        android:id="@+id/cover"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="-100dp"
        android:alpha="0.5"
        android:contentDescription="@string/app_name"
        android:rotation="-30"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_profile" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="Laporan Keuangan"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:textSize="17sp"
            android:textStyle="bold" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2">


            <androidx.cardview.widget.CardView
                android:id="@+id/neraca"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:drawablePadding="10dp"
                    android:gravity="center_horizontal"
                    android:text="Data Neraca"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    app:drawableTopCompat="@drawable/ic_neraca" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:id="@+id/rugiLaba"
                app:cardCornerRadius="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:drawablePadding="10dp"
                    android:gravity="center_horizontal"
                    android:text="Data Laba Rugi"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    app:drawableTopCompat="@drawable/ic_laba_rugi" />
            </androidx.cardview.widget.CardView>

        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2">


            <androidx.cardview.widget.CardView
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:id="@+id/npf"
                app:cardCornerRadius="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:drawablePadding="10dp"
                    android:gravity="center_horizontal"
                    android:text="Data NPF"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    app:drawableTopCompat="@drawable/ic_report" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:id="@+id/noa"
                app:cardCornerRadius="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:drawablePadding="10dp"
                    android:gravity="center_horizontal"
                    android:text="Data NOA"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    app:drawableTopCompat="@drawable/ic_report" />
            </androidx.cardview.widget.CardView>

        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2">


            <androidx.cardview.widget.CardView
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:id="@+id/angsuran"
                app:cardCornerRadius="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:drawablePadding="10dp"
                    android:gravity="center_horizontal"
                    android:text="Data Angsuran"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    app:drawableTopCompat="@drawable/ic_angsuran" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:id="@+id/saldoDeposit"
                app:cardCornerRadius="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:drawablePadding="10dp"
                    android:gravity="center_horizontal"
                    android:text="Data Saldo dan Deposito"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    app:drawableTopCompat="@drawable/ic_saldo" />
            </androidx.cardview.widget.CardView>

        </GridLayout>
    </LinearLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".main.pengumuman.adapter.AdapterPengumuman">

    <androidx.cardview.widget.CardView
        android:id="@+id/imcCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/imgCover"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:contentDescription="@string/app_name"
            android:scaleType="center"
            android:src="@drawable/logo" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/imcCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="VQm5NO0HnQZRVBDv5eku"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            android:textStyle="bold" />

    <TextView
        android:visibility="gone"
        android:id="@+id/keterangan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="VQm5NO0HnQZRVBDv5ekub3i3YCUx8nleg9dX4M9-J28cWxrrq24RZfo_0L0qIMAqu1gVQm5NO0HnQZRVBDv5ekub3i3YCUx8nleg9dX4M9-J28cWxrrq24RZfo_0L0qIMAqu1g"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/lampiran"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/post_on"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Jumat, 15-10-2021 15:15"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption" />

    </LinearLayout>
</RelativeLayout>
